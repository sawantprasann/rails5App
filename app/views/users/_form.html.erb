
<div class="text-center">
<h1>Invite New User</h1>

</div><div class="row">
<div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">
<div class="panel panel-default">
<div class="panel-body">
<%= simple_form_for(@user) do |f| %>

<% unless @user.errors.empty?
 %><div class="alert alert-warning">
<%= devise_error_messages! %>

</div><% end %><div class="form-group">
<%= f.label(:first_name) %>
<%= f.text_field(:first_name, autofocus: true, placeholder: 'First name', class: 'form-control') %>

</div><div class="form-group">
<%= f.label(:last_name) %>
<%= f.text_field(:last_name, placeholder: 'Last name', class: 'form-control') %>

</div><div class="form-group">
<%= f.label(:email) %>
<%= f.email_field(:email, placeholder: 'Hello@youremail.com', class: 'form-control') %>

</div><%= f.submit('Register', class: 'btn btn-primary btn-block') %>
<%= link_to('Back',users_path, class: 'btn btn-default  btn-block') %>

<% end %></div></div></div></div>
