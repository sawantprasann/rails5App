<div class="text-center">
   <h1>Settings</h1>
</div>
<div class="row">
   <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-offset-2 col-sm-8 col-xs-12">
      <div class="panel panel-default">
         <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: 'form' }) do |f| %>
            <% unless resource.errors.empty?%>
            <div class="alert alert-warning">
               <%= devise_error_messages! %>
            </div>
            <% end %>
            <div class="form-group">
               <%= f.label(:first_name) %>
               <%= f.text_field(:first_name, autofocus: true, placeholder: 'First name', class: 'form-control') %>
            </div>
            <div class="form-group">
               <%= f.label(:last_name) %>
               <%= f.text_field(:last_name, placeholder: 'Last name', class: 'form-control')%>
            </div>
            <div class="form-group">
               <%= f.label(:email) %>
               <%= f.email_field(:email, placeholder: 'Hello@youremail.com', class: 'form-control') %>
            </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation?
               %>
            <div class="form-group"><%= ::Temple::Utils.escape_html(("Currently waiting confirmation for: #{resource.unconfirmed_email}")) %>
            </div>
            <% end %>
            <div class="form-group">
               <%= f.label(:password)%>
               <i><%= (' (leave blank if you don\'t want to change it)') %>
               </i><% if @minimum_password_length
                  %><i><%=(" (#{@minimum_password_length} characters minimum)") %>
               </i><% end %><%= (f.password_field(:password, autocomplete: 'off', placeholder: 'Password', class: 'form-control')) %>
            </div>
            <div class="form-group">
               <%= f.label(:password_confirmation) %>
               <%= f.password_field(:password_confirmation, autocomplete: 'off', placeholder: 'Password confirmation', class: 'form-control') %>
            </div>
            <div class="form-group">
               <%= f.label(:current_password) %>
               <i><%= (' (we need your current password to confirm your changes)')%>
               </i><%= f.password_field(:current_password, autocomplete: 'off', placeholder: 'Current password', class: 'form-control') %>
            </div>
            <%= f.submit( t('.update'), class: 'btn btn-primary btn-block') %>
            <% end %>
            <%#= ::Temple::Utils.escape_html((_slim_controls2)) %>
         </div>
      </div>
      <h3><%= t('.cancel_my_account')%></h3>
      <p>
         <%= t('.unhappy?') %>
         <%= button_to(t('.cancel_my_account'), registration_path(resource_name), data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger btn-lg') %>
      </p>
   </div>
</div>